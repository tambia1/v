{
	"name": "v",
	"private": true,
	"version": "1.0.0",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "npm run build:packages",
		"build:packages": "npm run build:all && npm run build:filter",
		"build:all": "npm run build:package --workspaces",
		"build:package": "cd $npm_package_config_workspace && npm run build",
		"build:filter": "echo 'Filtering packages...' && YOUR_FILTER_COMMAND_HERE",
		"serve": "npm run serve:packages",
		"serve:packages": "npm run serve:all && npm run serve:filter",
		"serve:all": "npm run serve:package --workspaces",
		"serve:package": "cd $npm_package_config_workspace && npm run preview",
		"serve:filter": "echo 'Filtering packages...' && YOUR_FILTER_COMMAND_HERE",
		"stop": "npm run stop:ports",
		"stop:ports": "kill-port --port 5000,5001,5002"
	},
	"config": {
		"workspace": ""
	},
	"devDependencies": {
		"kill-port": "^2.0.1"
	}
}
